<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="145dp"
        android:background="#4f313131"
        android:orientation="vertical">

        <include layout="@layout/item_index" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:background="#cccbcb" />

        <include
            android:id="@+id/weather_now"
            layout="@layout/item_weather" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:background="#cccbcb" />

        <include
            android:id="@+id/weather_second"
            layout="@layout/item_weather" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:background="#cccbcb" />

        <include
            android:id="@+id/weather_third"
            layout="@layout/item_weather" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:background="#cccbcb" />

        <include
            android:id="@+id/weather_four"
            layout="@layout/item_weather" />

    </LinearLayout>

</RelativeLayout>